doctype html
html(ng-app="jShareFolderApp")
    head
        title= "Share folder"
        link(rel='stylesheet' href='/stylesheets/style.css')
        meta(name="viewport" content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes")
        script(src="/javascripts/angular.js")
        //-script(src="http://yastatic.net/angularjs/1.3.8/angular.min.js")
        script(src="/javascripts/jShareFolderApp.js")
        script(src="/javascripts/jShareFolderControllers.js")
        link(rel='stylesheet' href='/bootstrap/css/bootstrap.css')
        //-link(rel='stylesheet' href='http://yastatic.net/bootstrap/3.3.1/css/bootstrap.min.css')
        //-link(rel='stylesheet' href='/bootstrap/css/bootstrap-theme.css')
        script(src='/javascripts/ui-bootstrap-tpls-0.12.0.js')
    body(ng-controller="jShareFolderController")
        div(class="container-fluid")
            div(class="row")
                div(ng-repeat="folder in folders track by $index")
                    div(class="container-fluid")
                        div(class="row")
                            h3 {{folder}}
                        div(ng-repeat="video in subvideos[$index] track by $index")
                            div(class="row")
                                a(ng-href="{{video}}") {{video}}
                                span {{subsizes[$parent.$index][$index]}} mb
            //-
                h3 All files
                div(ng-repeat="video in videos track by $index")
                    div(class="container-fluid")
                        div(class="row")
                            a(ng-href="{{video}}") {{video}}
